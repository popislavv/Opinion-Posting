 <%- include("header.ejs") %>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
 
 
 <!-- EDIT AND CREATE POST -->
 <div class="container mt-5 mb-5">
    <div class="row justify-content-left">
      <div class="col-md-6 mb-5">

      <% if(locals.postToEdit) { %>
      <h2>Edit Post</h2>
        <form id="myForm" action="/edit/<%= postId %>" method="post">
          <div class="mb-3">
            <label for="titleInput" class="form-label">Title</label>
            <input type="text" value="<%= postToEdit.fTitle %>" class="form-control" id="titleInput" name="title" placeholder="Enter title" required>
          </div>
          <div class="mb-3">
            <label for="textInput" class="form-label">Text</label>
            <input type="text" value="<%= postToEdit.fText %>" class="form-control" id="textInput" name="text" placeholder="Enter your thought's" required>
          </div>
          <input type="submit" value="SUBMIT" class="btn btn-primary"/>
        </form>

      <% }else {%>
      <h2>Create post</h2>
        <form id="myForm" action="/submit" method="POST">
          <div class="mb-3">
            <label for="titleInput" class="form-label">Title</label>
            <input type="text" class="form-control" id="titleInput" name="title" placeholder="Enter title" required>
          </div>
          <div class="mb-3">
            <label for="textInput" class="form-label">Text</label>
            <input type="text" class="form-control" id="textInput" name="text" placeholder="Enter your thought's" required>
          </div>
          <input type="submit" value="SUBMIT" class="btn btn-primary"/>
        </form>
      <% }%>
      </div>
    </div>
  </div>
  <%- include("footer.ejs") %>